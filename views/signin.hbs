<h2>Sign in</h2>

<div id="form-container">
  <form action="/auth/signin"
        method="post">

    <div class="form-item">
      <label for="user-email">Email</label>
      <input id="user-email"
             name="email"
             type="email"
             placeholder="Your email"
             value="foo@bar.baz"
             required>
    </div>

    <div class="form-item">
      <label for="user-password">Password</label>
      <input id="user-password"
             name="password"
             type="password"
             value="1234"
             required>
    </div>

    <button>Log in</button>
  </form>

</div>