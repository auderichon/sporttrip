<div id="home">
    <header>
        <h1>Find partners for <br>your next sports trip!</h1>
    </header>
    <div id="home-listing">
        <div id="filters">
            <h4>Filters:</h4>
        </div>
        <div id="activity-list">
            {{#each activities}}
            <div class="each-activity">
                <img src="{{ this.sport.picture }}" alt="">
                <h4>{{ this.activityName }}</h4>
                <p>with {{ this.creator.firstName }}</p>
                {{!-- <p>by {{ this.user.name }}</p> --}}
                <p>{{ format-date this.date }}</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>